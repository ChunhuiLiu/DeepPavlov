{
  "dataset_reader": {
    "name": "basic_classification_reader",
    "x": [
      "Title",
      "Description",
      "FullText",
      "Category",
      "Top"
    ],
    "y": "Label",
    "data_path": "./YahooAnswers/yahoo_answers_data/",
    "train": "train_all.csv"
  },
  "dataset_iterator": {
    "name": "basic_classification_iterator",
    "seed": 42,
    "split_seed": 23,
    "field_to_split": "train",
    "split_fields": [
      "train",
      "valid",
      "test"
    ],
    "split_proportions": [
      0.8,
      0.1,
      0.1
    ]
  },
  "chainer": {
    "in": [
      "x_title",
      "x_description",
      "x_fulltext",
      "x_category",
      "x_top"
    ],
    "in_y": [
      "y"
    ],
    "pipe": [
      {
        "id": "classes_vocab",
        "name": "default_vocab",
        "fit_on": [
          "y"
        ],
        "level": "token",
        "save_path": "YahooAnswers/models/yahoo_answers_classes.dict",
        "load_path": "YahooAnswers/models/yahoo_answers_classes.dict"
      },
      {
        "id": "categories_vocab",
        "name": "default_vocab",
        "fit_on": [
          "x_category"
        ],
        "level": "token",
        "save_path": "YahooAnswers/models/yahoo_answers_categories.dict",
        "load_path": "YahooAnswers/models/yahoo_answers_categories.dict"
      },
      {
        "id": "tops_vocab",
        "name": "default_vocab",
        "fit_on": [
          "x_top"
        ],
        "level": "token",
        "save_path": "YahooAnswers/models/yahoo_answers_tops.dict",
        "load_path": "YahooAnswers/models/yahoo_answers_tops.dict"
      },
      {
        "in": "x_fulltext",
        "out": "x_title_descr_tok",
        "id": "my_tokenizer",
        "name": "nltk_tokenizer",
        "tokenizer": "wordpunct_tokenize"
      },
      {
        "in": "x_title_descr_tok",
        "out": "x_title_descr_emb",
        "id": "my_embedder",
        "name": "fasttext",
        "save_path": "embeddings/wiki.en.bin",
        "load_path": "embeddings/wiki.en.bin",
        "dim": 300
      },
      {
        "in": [
          "x_title_descr_emb"
        ],
        "in_y": [
          "y"
        ],
        "out": [
          "y_labels",
          "y_probas_dict"
        ],
        "main": true,
        "name": "keras_classification_model",
        "save_path": "YahooAnswers/models/model_v0",
        "load_path": "YahooAnswers/models/model_v0",
        "embedding_size": "#my_embedder.dim",
        "classes": "#classes_vocab.keys()",
        "kernel_sizes_cnn": [
          1,
          2,
          3
        ],
        "filters_cnn": 256,
        "confident_threshold": 1,
        "optimizer": "Adam",
        "lear_rate": 0.01,
        "lear_rate_decay": 0.1,
        "loss": "categorical_crossentropy",
        "text_size": 150,
        "coef_reg_cnn": 1e-4,
        "coef_reg_den": 1e-4,
        "dropout_rate": 0.5,
        "dense_size": 100,
        "model_name": "cnn_model"
      }
    ],
    "out": [
      "y_labels",
      "y_probas_dict"
    ]
  },
  "train": {
    "epochs": 10,
    "batch_size": 64,
    "metrics": [
      "classification_accuracy",
      "classification_f1",
      "classification_roc_auc"
    ],
    "validation_patience": 5,
    "val_every_n_epochs": 1,
    "log_every_n_epochs": 1,
    "show_examples": true,
    "validate_best": true,
    "test_best": true
  },
  "metadata": {
    "requirements": [
      "../dp_requirements/tf.txt",
      "../dp_requirements/fasttext.txt"
    ],
    "labels": {
      "telegram_utils": "IntentModel",
      "server_utils": "KerasIntentModel"
    },
    "download": [
      {
        "url": "http://files.deeppavlov.ai/deeppavlov_data/embeddings/wiki.en.bin",
        "subdir": "embeddings"
      }
    ]
  }
}
