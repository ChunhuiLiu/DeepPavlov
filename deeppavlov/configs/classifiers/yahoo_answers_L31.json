{
  "dataset_reader": {
    "name": "basic_classification_reader",
    "x": [
      "Title",
      "Description",
      "FullText",
      "Category",
      "Top"
    ],
    "y": "Label",
    "data_path": "./YahooAnswers/yahoo_answers_data/",
    "train": "train.csv",
    "valid": "valid.csv"
  },
  "dataset_iterator": {
    "name": "basic_classification_iterator",
    "seed": 42
  },
  "chainer": {
    "in": [
      "x_title",
      "x_description",
      "x_fulltext",
      "x_category",
      "x_top"
    ],
    "in_y": [
      "y"
    ],
    "pipe": [
      {
        "id": "classes_vocab",
        "name": "simple_vocab",
        "fit_on": [
          "y"
        ],
        "level": "token",
        "save_path": "YahooAnswers/models/yahoo_answers_classes.dict",
        "load_path": "YahooAnswers/models/yahoo_answers_classes.dict",
        "in": "y",
        "out": "y_ids"
      },
      {
        "id": "categories_vocab",
        "name": "simple_vocab",
        "fit_on": [
          "x_category"
        ],
        "level": "token",
        "save_path": "YahooAnswers/models/yahoo_answers_categories.dict",
        "load_path": "YahooAnswers/models/yahoo_answers_categories.dict"
      },
      {
        "id": "tops_vocab",
        "name": "simple_vocab",
        "fit_on": [
          "x_top"
        ],
        "level": "token",
        "save_path": "YahooAnswers/models/yahoo_answers_tops.dict",
        "load_path": "YahooAnswers/models/yahoo_answers_tops.dict"
      },
      {
        "in": "x_fulltext",
        "out": "x_title_descr_tok",
        "id": "my_tokenizer",
        "name": "nltk_tokenizer",
        "tokenizer": "wordpunct_tokenize"
      },
      {
        "in": [
          "x_title_descr_tok"
        ],
        "out": [
          "x_title_descr_emb"
        ],
        "id": "my_embedder",
        "name": "elmo",
        "elmo_output_names": [
          "elmo"
        ],
        "mini_batch_size": 8,
        "spec": "https://tfhub.dev/google/elmo/2"
      },
      {
        "in": "y_ids",
        "out": "y_onehot",
        "name": "one_hotter",
        "id": "my_one_hotter",
        "depth": "#classes_vocab.len"
      },
      {
        "in": [
          "x_title_descr_emb"
        ],
        "in_y": [
          "y_onehot"
        ],
        "out": [
          "y_pred_probas"
        ],
        "main": true,
        "name": "keras_classification_model",
        "save_path": "YahooAnswers/models/model_v0",
        "load_path": "YahooAnswers/models/model_v0",
        "embedding_size": "#my_embedder.dim",
        "n_classes": "#classes_vocab.len",
        "units_gru": 256,
        "optimizer": "Adam",
        "lear_rate": 0.001,
        "lear_rate_decay": 0.001,
        "loss": "categorical_crossentropy",
        "text_size": 30,
        "coef_reg_lstm": 1e-5,
        "coef_reg_den": 1e-5,
        "dropout_rate": 0.5,
        "rec_dropout_rate": 0.5,
        "dense_size": 100,
        "model_name": "gru_with_masking_model",
        "last_layer_activation": "softmax"
      },
      {
        "in": "y_pred_probas",
        "out": "y_pred_ids",
        "name": "proba2labels",
        "max_proba": true
      },
      {
        "in": "y_pred_ids",
        "out": "y_pred_labels",
        "ref": "classes_vocab"
      },
      {
        "ref": "my_one_hotter",
        "in": "y_pred_ids",
        "out": "y_pred_onehot"
      }
    ],
    "out": [
      "y_pred_labels"
    ]
  },
  "train": {
    "epochs": 100,
    "batch_size": 64,
    "metrics": [
      {
        "name": "sets_accuracy",
        "inputs": [
          "y",
          "y_pred_labels"
        ]
      },
      {
        "name": "roc_auc",
        "inputs": [
          "y_onehot",
          "y_pred_probas"
        ]
      },
      "f1_macro"
    ],
    "validation_patience": 5,
    "val_every_n_epochs": 1,
    "log_every_n_epochs": 1,
    "show_examples": false,
    "validate_best": true,
    "test_best": false
  },
  "metadata": {
    "requirements": [
      "../dp_requirements/tf.txt",
      "../dp_requirements/fasttext.txt"
    ],
    "labels": {
      "telegram_utils": "IntentModel",
      "server_utils": "KerasIntentModel"
    },
    "download": [
      "http://files.deeppavlov.ai/deeppavlov_data/YahooAnswers.tar.gz"
    ]
  }
}
