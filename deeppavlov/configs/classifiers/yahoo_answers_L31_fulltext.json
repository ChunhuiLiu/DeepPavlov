{
  "dataset_reader": {
    "name": "basic_classification_reader",
    "x": "Title",
    "y": "Label",
    "data_path": "./YahooAnswers/yahoo_answers_data/",
    "train": "train.csv",
    "valid": "valid.csv",
    "test": "test.csv"
  },
  "dataset_iterator": {
    "name": "basic_classification_iterator",
    "seed": 42
  },
  "chainer": {
    "in": [
      "x"
    ],
    "in_y": [
      "y"
    ],
    "pipe": [
      {
        "id": "classes_vocab",
        "name": "simple_vocab",
        "fit_on": [
          "y"
        ],
        "level": "token",
        "save_path": "YahooAnswers/models/model_v12/yahoo_answers_classes.dict",
        "load_path": "YahooAnswers/models/model_v12/yahoo_answers_classes.dict"
      },
      {
        "in": [
          "x"
        ],
        "out": [
          "x_prep"
        ],
        "name": "dirty_comments_preprocessor",
        "remove_punctuation": true
      },
      {
        "in": "x_prep",
        "out": "x_tok",
        "id": "my_tokenizer",
        "name": "nltk_tokenizer",
        "tokenizer": "wordpunct_tokenize"
      },
      {
        "in": [
          "x_tok"
        ],
        "out": [
          "x_emb"
        ],
        "id": "my_embedder",
        "name": "elmo",
        "elmo_output_names": [
          "elmo"
        ],
        "mini_batch_size": 8,
        "spec": "https://tfhub.dev/google/elmo/2"
      },
      {
        "in": [
          "x_emb"
        ],
        "in_y": [
          "y"
        ],
        "out": [
          "y_labels",
          "y_probas_dict"
        ],
        "main": true,
        "name": "keras_classification_model",
        "save_path": "YahooAnswers/models/model_v12/model",
        "load_path": "YahooAnswers/models/model_v12/model",
        "embedding_size": "#my_embedder.dim",
        "classes": "#classes_vocab.keys()",
        "units_gru": 256,
        "confident_threshold": 1,
        "optimizer": "Adam",
        "lear_rate": 0.001,
        "lear_rate_decay": 0.001,
        "loss": "categorical_crossentropy",
        "text_size": 20,
        "coef_reg_lstm": 1e-5,
        "coef_reg_den": 1e-5,
        "dropout_rate": 0.3,
        "rec_dropout_rate": 0.3,
        "dense_size": 100,
        "model_name": "gru_with_masking_model",
        "last_layer_activation": "softmax"
      }
    ],
    "out": [
      "y_labels",
      "y_probas_dict"
    ]
  },
  "train": {
    "epochs": 100,
    "batch_size": 64,
    "metrics": [
      {
        "name": "classification_roc_auc",
        "inputs": [
          "y",
          "y_probas_dict"
        ]
      },
      {
        "name": "sets_accuracy",
        "inputs": [
          "y",
          "y_labels"
        ]
      },
      "classification_f1"
    ],
    "validation_patience": 5,
    "val_every_n_epochs": 1,
    "log_every_n_epochs": 1,
    "show_examples": false,
    "validate_best": true,
    "test_best": true,
    "tensorboard_log_dir": "YahooAnswers/models/model_v12/"
  },
  "metadata": {
    "requirements": [
      "../dp_requirements/tf.txt",
      "../dp_requirements/fasttext.txt"
    ],
    "labels": {
      "telegram_utils": "IntentModel",
      "server_utils": "KerasIntentModel"
    },
    "download": [
      "http://files.deeppavlov.ai/deeppavlov_data/YahooAnswers.tar.gz"
    ]
  }
}
