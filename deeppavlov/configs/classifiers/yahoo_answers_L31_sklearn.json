{
  "dataset_reader": {
    "name": "basic_classification_reader",
    "x": [
      "Title",
      "Description",
      "FullText",
      "Category",
      "Top"
    ],
    "y": "Label",
    "data_path": "./YahooAnswers/yahoo_answers_data/",
    "train": "train.csv",
    "valid": "valid.csv"
  },
  "dataset_iterator": {
    "name": "basic_classification_iterator",
    "seed": 42
  },
  "chainer": {
    "in": [
      "x_title",
      "x_description",
      "x_fulltext",
      "x_category",
      "x_top"
    ],
    "in_y": "y",
    "pipe": [
      {
        "id": "classes_vocab",
        "name": "default_vocab",
        "fit_on": [
          "y"
        ],
        "level": "token",
        "save_path": "YahooAnswers/models/yahoo_answers_classes.dict",
        "load_path": "YahooAnswers/models/yahoo_answers_classes.dict"
      },
      {
        "id": "categories_vocab",
        "name": "default_vocab",
        "fit_on": [
          "x_category"
        ],
        "level": "token",
        "save_path": "YahooAnswers/models/yahoo_answers_categories.dict",
        "load_path": "YahooAnswers/models/yahoo_answers_categories.dict"
      },
      {
        "id": "tops_vocab",
        "name": "default_vocab",
        "fit_on": [
          "x_top"
        ],
        "level": "token",
        "save_path": "YahooAnswers/models/yahoo_answers_tops.dict",
        "load_path": "YahooAnswers/models/yahoo_answers_tops.dict"
      },
      {
        "id": "vectorizer",
        "name": "tfidf_vectorizer",
        "in": [
          "x_fulltext"
        ],
        "fit_on": [
          "x_fulltext"
        ],
        "save_path": "YahooAnswers/models/yahoo_answers_vectorizer.pkl",
        "load_path": "YahooAnswers/models/yahoo_answers_vectorizer.pkl",
        "out": [
          "x_vec"
        ]
      },
      {
        "in": "x_vec",
        "fit_on": [
          "x_vec",
          "y"
        ],
        "out": [
          "answer",
          "score"
        ],
        "main": true,
        "name": "logreg_classifier",
        "save_path": "YahooAnswers/models/model_v2.pkl",
        "load_path": "YahooAnswers/models/model_v2.pkl",
        "c": 1,
        "penalty": "l2"
      }
    ],
    "out": [
      "answer"
    ]
  },
  "train": {
    "epochs": 100,
    "batch_size": 64,
    "metrics": [
      "accuracy"
    ],
    "validation_patience": 5,
    "val_every_n_epochs": 1,
    "log_every_n_epochs": 1,
    "show_examples": false,
    "validate_best": true,
    "test_best": false
  },
  "metadata": {
    "requirements": [
      "../dp_requirements/tf.txt",
      "../dp_requirements/fasttext.txt"
    ],
    "labels": {
      "telegram_utils": "IntentModel",
      "server_utils": "KerasIntentModel"
    },
    "download": [
      {
        "url": "http://files.deeppavlov.ai/deeppavlov_data/embeddings/wiki.en.bin",
        "subdir": "embeddings"
      }
    ]
  }
}
